<%- include("templates/header") %> 

<main class="container mt-5 py-5">
  
  <div class="row justify-content-center">
    <div class="col-md-6 col-lg-4 text-center">

      <h1 class="display-5 fw-bold">Let's reduce food waste, one dish at a time.</h1>
      <div class="card text-center">
        <div class="card-body">
          <% if (error) { %>
            <div class="alert alert-danger" role="alert">
              <%= error %>
            </div>
          <% } %>
          <h5 class="card-title">Welcome!</h5>
          <p class="card-text">Sign up or log in to get started.</p>
          <a href="/signup" class="btn btn-primary btn-lg">Sign Up</a>
          <a href="/login" class="btn btn-outline-primary btn-lg">Log In</a>
        </div>
      </div>
    </div>
  </div>
</main>

<%- include("templates/footer") %>
