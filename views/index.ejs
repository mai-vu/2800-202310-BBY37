<%- include("templates/header") %> 

<main class="container mt-5 py-5">
  <div class="row justify-content-center">
    <div class="col-md-6 col-lg-4 text-center">
      <h1 class="display-5 fw-bold" style="font-family: ostrich; font-size: 300%" id="typedText"></h1>
    </div>
  </div>

  <div class="row justify-content-center">
    <div class="col-md-6 col-lg-4 text-center">
      <div class="card text-center fixed-card">
        <div class="card-body" style="font-family: comfortaaBold">
          <% if (error) { %>
            <div class="alert alert-danger" role="alert">
              <%= error %>
            </div>
          <% } %>
          <h5 class="card-title">Welcome!</h5>
          <p class="card-text">Sign up or log in to get started.</p>
          <a href="/join/signup" class="btn btn-primary btn-lg">Sign Up</a>
          <a href="/join/login" class="btn btn-outline-primary btn-lg">Log In</a>
        </div>
      </div>
    </div>
  </div>
</main>

<script>
  document.addEventListener("DOMContentLoaded", function() {
    var typed = new Typed("#typedText", {
      strings: [
        "Let's eliminate food waste, one dish at a time.",
        "Have something to cook?",
        "Let's get started!",
        "Got the recipes? We got your meal."
      ],
      typeSpeed: 50, // Speed of typing in milliseconds
      startDelay: 3000, // Delay before typing starts in milliseconds
      backSpeed: 30, // Speed of deleting in milliseconds
      loop: true, // Loop the typing effect
      showCursor: false, // Hide the cursor
      smartBackspace: false // Disable smart backspace
    });
  });
</script>

