<%- include("templates/header") %>
<div class="container mt-5 comfortaaBold ">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card bg-body-tertiary">
                <div class="card-header">
                    <h4>Profile Information</h4>
                </div>
                <div class="card-body">
                    <div class="form-group">
                        <label for="name">Name:</label>
                        <p><%= name %></p>
                    </div>
                    <div class="form-group">
                        <label for="email">Email:</label>
                        <p><%= email %></p>
                    </div>
                    <div class="form-group">
                        <label for="dietaryRestrictions">Dietary Restrictions:</label>
                        <% if (dietaryRestrictions && dietaryRestrictions.length && dietaryRestrictions[0] !== null) { %>
                        <ul>
                            <% dietaryRestrictions.forEach(function(item) { %>
                            <li><%= item %></li>
                            <% }); %>
                        </ul>
                        <% } else { %>
                        <p>No dietary restrictions specified.</p>
                        <% } %>
                    </div>
                    <a href="/profile/editProfile" class="btn btn-primary">Edit Profile</a>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include("templates/footer") %>