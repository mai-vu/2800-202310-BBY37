<%- include("templates/header") %>
<!-- Home page content -->
<div class="container py-5 text-center">
    <h1 class="display-4 fw-bold">
        Hello, <%= name %>!
    </h1>
    <div class="col-lg-6 mx-auto mt-4">
        What are we making today?
    </div>
    <form class="w-100 mx-auto mt-4" role="userInput" method="POST" action="/home" >
        <div class="input-group">
            <input class="form-control" type="text" id="ingredientInput" name="ingredient"
                placeholder="Enter ingredient"  style="border-radius: 50px">
            <button class="btn btn-primary" id="addIngredientBtn" style="border-radius: 50px">+</button>
        </div>
    </form><br>
    <div>
        <%- include('templates/ingredients', {ingredients: ingredients}) %><br>
    </div>
</div>

<script src="/scripts/home.js"></script>

<%- include("templates/footer") %>