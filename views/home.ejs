<%- include("templates/header") %> 
    <!-- home page content -->
    <div class="px-4 py-5 my-5 text-center">
        <h1 class="display-5 fw-bold">
            Hello, <%= name %>!
        </h1>
        <div class="col-lg-6 mx-auto">
            Let's reduce food waste, one dish at a time!
        </div>
        <form class="w-100 me-3" role="userInput" method="POST" action="/home">
            <input class="form-control" type="text" id="ingredientInput" name="ingredient" placeholder="Enter ingredient">
            <button class="btn btn-info my-1" id="addIngredientBtn">Add</button>
        </form>
        <% if (ingredients.length > 0) { %>
            <div class="text-start">
              <h2>Ingredients:</h2>
              <ul>
                  <% for (let i = 0; i < ingredients.length; i++) { %>
                      <li><%= ingredients[i] %></li>
                  <% } %>
              </ul>
            </div>
            <form class="w-100" method="POST" action="/clearIngredients">
                <button class="btn btn-danger">Clear Ingredients</button>
            </form>
        <% } %>
    </div>
<%- include("templates/footer") %> 