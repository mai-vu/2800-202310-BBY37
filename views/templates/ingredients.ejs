<% if (ingredients.length > 0) { %>
  <div class="ingredient-list">
    <% for (let i = 0; i < ingredients.length; i++) { %>
      <div id="ingredientItem-<%= i %>" class="ingredient-item d-flex align-items-center justify-content-between comfortaaBold mb-2">
        <span class="me-2"><%= ingredients[i] %></span>
        <button class="btn btn-sm btn-outline-danger comfortaaBold" style="border-radius: 50%; padding: 3px 6px; line-height: 0.8;" onclick="removeIngredient(<%= i %>, '<%= ingredients[i] %>')">x</button>
      </div>
    <% } %>
  </div>
<% } %>
